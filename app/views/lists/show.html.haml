%article.couple.row
  %header.small-12.columns
    .row
      .small-12.medium-4.columns
        =image_tag @list.image
      .small-12.medium-8.columns
        %h1= @list.title
        %p= @list.description
        %p Total for charity: #{formatted_donations(@list.total_gifts)}
        %p Total gift fund: #{formatted_gifts(@list.total_gifts)}
        = link_to "Contribute to #{@list.title}'s list", "/payment/new?list_id=#{@list.id}", class: "button button-med"

  .product-display.small-12.columns

    %section.thermometer-container
      #thermometer
      #bar
      = @list.progress_bar
      = @list.products.size

    %section.products-container
      %ul.products
        - @list.products.each do |product|
          %li.clearfix
            .marker
            .small-2.columns
              =image_tag product.image
            .small-10.columns
              %h3= product.name
              .description= product.description
              .price= formatted_price(product.price)


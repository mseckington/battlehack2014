%article.couple
  %header
    .row
      .small-4.columns
        =image_tag @list.image
      .small-8.columns
        %h1= @list.title
        %p= @list.description
        %p.btn.primary
          Contribute to #{@list.title}'s list 

%section.small-12.columns.show-for-small-only 
  #thermometer
  %p
    This is a description of how far we've reached the target.

.row
  %section.donate.small-12.medium-10.columns
    %ul.products
      - @list.products.each do |product|
        %li.row
          .small-2.columns
            =image_tag product.image
          .small-10.columns
            %h3= product.name
            .description= product.description
            .price= formatted_price(product.price)

  .thermometer-container.medium-2.columns
    #thermometer


%article.couple.row
  %header.small-12.columns
    .row
      .small-12.medium-4.columns
        =image_tag @list.image
      .small-12.medium-8.columns
        %h1= @list.title
        .small-12.medium-7.columns
          %p= @list.description
          %p Total for charity: #{formatted_donations(@list.total_gifts)}
          %p Total gift fund: #{ formatted_gifts(@list.total_gifts) }
        .small-12.medium-3.columns
          .charity_logo
            = image_tag("http://wishuponawedding.org/wp/wp-content/themes/CustomWish/library/images/logo.png")
        = link_to "Contribute to #{@list.title}'s list", "/payment/new?list_id=#{@list.id}", class: "button button-med"

  .product-display.small-12.columns

    %section.thermometer-container
      #thermometer
      #bar
      = @list.progress_bar
      = @list.products.size

    %section.products-container
      %ul.products
        - @list.products.each do |product|
          %li.clearfix
            .marker
            .small-2.columns
              =image_tag product.image
            .small-10.columns
              %h3= product.name
              .description= product.description
              .price= formatted_price(product.price)

    %section.donations
      %ul.donations
        - @list.donations.each do |donation|
          %li
            %h3= "@#{donation.twitter_id}"
            %p= donation.message

!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "WeddingLy.st"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    %script{:src => "https://js.braintreegateway.com/v2/braintree.js"}
    = csrf_meta_tags
  %body
    %header#global
      .row
        %h1.medium-6.columns
          = link_to root_path do
            Wedding#{ content_tag(:span) { 'ly.st' }}
        %ul.medium-6.columns
          %li
            %a{:href => "/about"} About
          - if signed_in?
            %li= link_to 'Edit our list', edit_list_path(current_account)
            %li= link_to 'Log out', logout_path
          - else
            %li{:class => "sign-up"}= link_to 'Sign Up', signup_path
            %li{:class => "log-in"}= link_to 'Log In', login_path
  %main
    = yield
    = javascript_include_tag "application"
  %footer
    .row

      %p 
        Made at
        %a{:href => "http://www.battlehack.org"} BattleHack
        by
        = succeed "," do
          %a{:href => "http://www.twitter.com/mseckington"} Melinda Seckington
        = succeed "," do
          %a{:href => "http://www.twitter.com/lily_dart"} Lily Dart
        %a{:href => "http://www.twitter.com/kevinprince"} Kevin Prince
        and
        = succeed "." do
          %a{:href => "http://www.twitter.com/_ianw"} Ian Dow-Wright
